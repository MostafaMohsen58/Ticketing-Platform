@model Tixora.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h1 class="text-danger">Delete Ticket</h1>

<h4>Are you sure you want to delete this ticket?</h4>

<div class="card mt-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Available Quantity</dt>
            <dd class="col-sm-9">@Model.AvailableQuantity</dd>

            @* <dt class="col-sm-3">Status</dt> *@
            @* <dd class="col-sm-9">@Model.Status</dd> *@

            <dt class="col-sm-3">Event</dt>
            <dd class="col-sm-9">@Model.Event?.Title</dd>

            <dt class="col-sm-3">Ticket Category</dt>
            <dd class="col-sm-9">@Model.TicketCategory?.Name</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
