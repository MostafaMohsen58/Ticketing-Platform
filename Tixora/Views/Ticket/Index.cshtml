@model Tixora.ViewModels.TicketIndexViewModel

@{
    ViewData["Title"] = "Tickets";
}

<h1 class="mb-4">Tickets</h1>

<!-- Filteration -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col">
            <label for="price">Price</label>
            <input type="number" step="0.01" name="price" id="price" class="form-control" value="@Model.Price" />
        </div>

        <div class="col">
            <label for="status">Status</label>

            @Html.DropDownListFor(m => m.Status,
                     new SelectList(Enum.GetValues(typeof(TicketStatus)).Cast<TicketStatus>().Select(s => new
                     {
                         Value = (int)s,
                         Text = s.ToString()
                     }), "Value", "Text", Model.Status),
                     "-- Select Status --",
                     new { @class = "form-control", id = "status" })
        </div>

        <div class="col">
            <button type="submit" class="btn btn-primary mt-4">Filter</button>
        </div>
    </div>
</form>

<!-- count -->
<div class="mb-3">
    <strong>Available Tickets:</strong> @Model.AvailableCount <br />
    <strong>Sold Out Tickets:</strong> @Model.SoldOutCount
</div>

<!--create new ticket-->
<a asp-action="Create" class="btn btn-success mb-3">Create</a>


<!-- Ticket table -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Price</th>
            <th>Available Quantity</th>
            <th>Status</th>
            <th>Event</th>
            <th>Ticket Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.Price</td>
                <td>@ticket.AvailableQuantity</td>
                <td>
                    @if (ticket.Status == TicketStatus.Available)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else if (ticket.Status == TicketStatus.NonAvailable)
                    {
                        <span class="badge bg-danger">Sold Out</span>
                    }
                </td>
                <td>@ticket.Event?.Title</td> 
                <td>@ticket.TicketCategory?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-ticket-id="@ticket.Id">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Report button -->
<div class="mb-4">
    <a href="@Url.Action("Report", "Ticket")" class="btn btn-primary">View Report</a>
</div>

<!-- Modal for delete confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this ticket?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" id="ticketId" />
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var ticketId = button.getAttribute('data-ticket-id');
        var input = deleteModal.querySelector('input[name="id"]');
        input.value = ticketId;
    });
</script>
