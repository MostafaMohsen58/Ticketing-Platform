@using Tixora.Settings
@model List<Event>

@{
    ViewData["Title"] = "Matches";
}

<div class="container py-4" style="background: linear-gradient(to right, #f9f9f9, #f1f1f1)">
    <h1 class="mb-4 text-center">Matches</h1>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="ExploreMatches" class="row g-3 mb-4 bg-white p-3 rounded shadow-sm">
                <div class="col-md-3">
                    <label class="form-label">Date</label>
                    <input type="date" name="startDate" class="form-control" value="@(Context.Request.Query["startDate"])" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Location</label>
                    <input type="text" name="location" class="form-control" placeholder="Enter venue name" value="@(Context.Request.Query["location"])" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Search events..." value="@(Context.Request.Query["search"])" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-dark me-2 w-50">Search</button>
                    <a asp-action="Matches" class="btn btn-outline-secondary w-50 clear-btn">Clear Search</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Match Cards -->
    <div class="row">
        @foreach (var eventItem in Model)
        {
            var isUpcoming = eventItem.StartDate > DateTime.Now;
            var isSoldOut = eventItem.Tickets == null || !eventItem.Tickets.Any(t => t.AvailableQuantity > 0);

            <div class="col-12 mb-4">
                <div class="card shadow-sm border-0 rounded-3 d-flex flex-row">
                    <!-- Left: Image -->
                    <div class="col-5">
                        <img src="@(FileSettings.ImagePath + "/" + eventItem.ImageUrl)" alt="@eventItem.Title"
                             class="card-img-left" />
                    </div>

                    <!-- Right: Details -->
                    <div class="col-7 d-flex flex-column p-4">
                        <h5 class="card-title mb-3">@eventItem.Title</h5>

                        <div class="mb-2">
                            <i class="fas fa-location-dot text-danger me-2"></i>
                            <span class="fw-semibold text-dark">Venue:</span>
                            <span class="text-muted">@eventItem.Venue?.Name</span>
                        </div>

                        <div class="mb-2">
                            <i class="fas fa-calendar-alt text-muted me-2"></i>
                            <span class="fw-semibold text-dark">Date:</span>
                            <span class="text-muted">@eventItem.StartDate.ToString("dddd d MMM yyyy")</span>
                        </div>

                        <div class="mb-2">
                            <i class="fas fa-location-arrow text-muted me-2"></i>
                            <span class="fw-semibold text-dark">Location:</span>
                            <span class="text-muted">@eventItem.Venue?.Address</span>
                        </div>


                        <div class="d-flex justify-content-end mt-auto">
                            @if (!isUpcoming || isSoldOut)
                            {
                                <button class="btn btn-book btn-disabled" disabled>
                                    @(isSoldOut ? "Sold Out" : "Match Ended")
                                </button>
                            }
                            else
                            {
                                @* <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@item.Id" class="btn btn-dark w-100">Book Ticket</a> *@


                                <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@eventItem.Id"
                                   class="btn btn-book   btn-dark">Book Ticket</a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="match-actions p-2 text-center">
                    @* <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })" class="btn btn-sm btn-primary"> *@
                    @*     Details *@
                    @* </a> *@
                    @if (@statusText == "Match Ended") 
                    {
                        <a class="btn btn-sm btn-danger ms-2" disabled>Book Ticket</a>

                    }
                    else if (eventItem.Tickets != null && eventItem.Tickets.Any(t => t.AvailableQuantity > 0))

                    {

                        <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@eventItem.Id" class="btn btn-sm ms-2" style=" color:white; background:#0e1b4d; border-color: #0e1b4d;">Book Ticket</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-danger ms-2" disabled>Book Ticket</a>

                    }
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center col-12">
                No matches available based on your search.
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 1200px;
            /* background-color: #f4f4f4; */
        }

        .card {
            display: flex;
            flex-direction: row;
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .card-img-left {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 0.25rem 0 0 0.25rem;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .card-text {
            font-size: 1rem;
            color: #444;
        }

        .btn-book {
            background-color: #212529;
            border: none;
            color: white;
            padding: 0.5rem 1rem;
        }

            .btn-book:hover,
            .btn-book:focus,
            .btn-book:active {
                background-color: #212529;
                color: white;
                box-shadow: none;
            }

            .btn-book.btn-disabled {
                background-color: #9fa5aa;
                color: white;
                cursor: not-allowed;
                pointer-events: none;
            }

        .clear-btn:hover {
            background-color: #9fa5aa;
            color: white;
        }

        .col-5 {
            padding-right: 0;
        }

        .col-7 {
            padding-left: 0;
        }

        .text-danger {
            color: #f82249 !important;
        }
        
