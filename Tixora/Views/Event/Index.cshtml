@using Tixora.Settings
@model IEnumerable<Tixora.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Event List</h1>

<div class="container mt-5">
    <div class="text-start mb-3">
        <a asp-action="Create" class="btn btn-create">Create New Event</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>Image</th>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <th>@Html.DisplayNameFor(model => model.VenueId)</th>
                    <th>@Html.DisplayNameFor(model => model.OrganizerId)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@($"{FileSettings.ImagePath}/{item.ImageUrl}")" alt="@item.Title" class="event-thumbnail" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>@Html.DisplayFor(modelItem => item.Venue.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Organizer.Name)</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">Edit</a>
                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-delete">Delete</a>

                          
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .table {
            border-collapse: collapse;
            width: 100%;
        }

            .table td, .table th {
                padding: 12px 15px;
                text-align: center;
                font-size: 16px;
                color: #222533;
            }

            .table thead {
                background-color: #2f3138;
            }

                .table thead th {
                    color: #ffffff;
                    font-weight: bold;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    background-color: #0e1b4d;
                    transition: background-color 0.3s ease;
                }

            .table tbody tr:hover {
                background-color: #f0f0f0;
                cursor: pointer;
            }

            .table tbody td {
                background-color: #ffffff;
                transition: background-color 0.3s ease;
            }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-size: 14px;
            text-decoration: none; /* Remove underline for <a> tags */
        }

            .btn:hover {
                opacity: 0.8;
                font-weight: bold;
                transform: scale(1.05);
            }

            .btn:focus {
                outline: none;
                box-shadow: none;
            }

        .btn-create {
            background-color: #f82249 !important;
            color: #ffffff !important;
            font-size: 16px !important;
        }

        /* Ensure specificity for btn-create */
        a.btn.btn-create {
            background-color: #f82249 !important;
            color: #ffffff !important;
            border: none !important;
        }

        .btn-details {
            background-color: #94B4C1;
            color: #ffffff;
        }

        .btn-edit {
            background-color: #547792;
            color: #ffffff;
            margin-left: 5px;
        }

        .btn-delete {
            background-color: #0e1b4d;
            color: #ffffff;
            margin-left: 5px;
        }

        .event-thumbnail {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
    </style>
}