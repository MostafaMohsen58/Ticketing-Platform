        @using Tixora.Settings
@model Tixora.Models.Event

@{
    ViewData["Title"] = "Event Details";
    Layout = "_AdminLayout";
}

<section class="py-4">
    <div class="container">
        <div class="card shadow-lg" style="background-color: #ffffff; color:#2f3549; border: 1px solid #2f3138; border-radius: 1.5rem; max-width: 900px; margin: 0 auto;">
            <div class="card-body">
                <h2 class="card-title mb-4" style="background-color: #7C4585; color: white; padding: 10px 15px; border-radius: 1rem; font-size: 1.8rem;">
                    Event Details
                </h2>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Title</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.Title</dd>

                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Description</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.Description</dd>

                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Start Date</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.StartDate</dd>

                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Category</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.Category</dd>

                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Venue</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.Venue.Name</dd>

                            <dt class="col-sm-4 font-weight-bold" style="font-size: 1rem;">Organizer</dt>
                            <dd class="col-sm-8" style="font-size: 1rem;">@Model.Organizer.Name</dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <img src="@($"{FileSettings.ImagePath}/{Model.ImageUrl}")" alt="@Model.ImageUrl" style="width: 100%; border-radius: 1rem;" />
                    </div>
                </div>

                <div class="mt-4 text-right">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn"
                       style="background-color: #7C4585; color: #ffffff; border-radius: 0.5rem; padding: 10px 25px; font-size: 1rem; transition: all 0.3s ease;">
                        Update
                    </a>
                    <a asp-action="Index" class="btn"
                       style="border-radius: 0.5rem; padding: 10px 25px; font-size: 1rem; border: 1px solid #0e1b4d; color: #0e1b4d; transition: all 0.3s ease;">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .btn:hover {
        transform: scale(1.05);
        opacity: 0.8;
    }

    .card:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .form-select, .form-control {
        border-radius: 0.5rem;
        box-shadow: none;
        border: 1px solid #ccc;
    }

        .form-select:focus, .form-control:focus {
            border-color: #7C4585;
            outline: none;
        }

    .form-label {
        font-size: 1rem;
        color: #333;
    }
</style>
