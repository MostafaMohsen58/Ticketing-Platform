@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="tazkarti-container">
    <div class="hero-section">
        <div class="hero-content text-center">
            <h1 class="main-heading" style="color:white;">What is your next plan?</h1>
            <p class="sub-heading">Explore and book all exclusive events and matches.</p>

            <div class="categories-container">
                <div class="row justify-content-center gap-3">
                    <div class="col-md-4">
                        <div class="category-card sports">
                            <div class="category-icon">
                                <i class="fas fa-futbol"></i>
                            </div>
                            <h3>Sports</h3>
                            <p>Match Tickets</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="category-card entertainment">
                            <div class="category-icon">
                                <i class="fa-solid fa-masks-theater">‌</i>
                            </div>
                            <h3>Show</h3>
                            <p>Event Tickets</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="auth-options mt-5">
                <span class="sign-in-text">Sign In</span>
                <span class="or-text">or</span>
                <a class="btn btn-register">Register Now!</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body{
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/cover.jpg');
        }
        main {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/cover.jpg');
            background-size: cover;
            background-position: center;
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            width:100%;
            margin-top: 0;
            padding: 0;
        }

        .hero-content {
            width: 100%;
            max-width: 1200px;
			padding: 40px 20px;
        }

        .main-heading {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 20px;
            letter-spacing: -0.5px;
        }

        .sub-heading {
            font-size: 1.3rem;
            margin-bottom: 50px;
        }

        .categories-container {
            margin-top: 30px;
            margin-bottom: 50px;
        }

        .category-card {
            border-radius: 15px;
            padding: 35px 25px;
            margin-bottom: 25px;
            transition: all 0.3s ease;
            cursor: pointer;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .category-card:hover {
            transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .sports {
            background-color: rgba(248, 34, 73, 0.7);

        }

        .entertainment {
            background-color: rgba(250, 250, 250, 0.7);
            color: #333;
            text-align: center;
        }

        .category-icon {
            font-size: 3.5rem;
            margin-bottom: 20px;
            height: 80px;
            width: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.2);
        }

        .category-card h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .category-card p {
            font-size: 1.1rem;
            margin-bottom: 0;
            font-weight: 500;
        }

        .auth-options {
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }

        .sign-in-text {
            cursor: pointer;
            margin-right: 15px;
            font-weight: bold;
            position: relative;
            transition: all 0.3s ease;
        }

        .sign-in-text:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background-color: #F82249;
            transition: width 0.3s ease;
        }

        .sign-in-text:hover:after {
            width: 100%;
        }

        .sign-in-text:hover {
            color: #F82249;
        }

        .or-text {
            margin: 0 15px;
            opacity: 0.8;
        }

        .btn-register {
            background-color: #F82249;
            color: white;
            padding: 12px 28px;
            border-radius: 50px;
            text-decoration: none;
            display: inline-block;
            margin-left: 15px;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(248, 34, 73, 0.3);
        }

        .btn-register:hover {
            background-color: #e01f45;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(248, 34, 73, 0.4);
            color: white;
            text-decoration: none;
        }

        @@media (max-width: 992px) {
            .main-heading {
                font-size: 2.8rem;
            }
        }

        @@media (max-width: 768px) {
            .main-heading {
                font-size: 2.2rem;
            }

            .sub-heading {
                font-size: 1.1rem;
                margin-bottom: 30px;
            }

            .category-card {
                padding: 25px 20px;
            }

            .category-icon {
                font-size: 2.8rem;
                height: 70px;
                width: 70px;
            }

            .category-card h3 {
                font-size: 1.5rem;
            }

            .auth-options {
                flex-direction: column;
                gap: 15px;
            }

            .sign-in-text {
                margin-right: 0;
            }

            .or-text {
                margin: 5px 0;
            }

            .btn-register {
                margin-left: 0;
            }
        }

        @@media (max-width: 576px) {
            .main-heading {
                font-size: 1.8rem;
            }
            .hero-content {
                padding: 30px 15px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.category-card').click(function() {
                //Navigate to respective category pages when clicked
                if ($(this).hasClass('sports')) {
                    window.location.href = '/Event/Matches';
                } else if ($(this).hasClass('entertainment')) {
                    window.location.href = '/Event/Entertainment';
                }
            });
            $('.sign-in-text').click(function() {
                window.location.href = '/Account/Login';
            });
            $('.btn-register').click(function() {
                window.location.href = '/Account/Register';
            });
        });
    </script>
}