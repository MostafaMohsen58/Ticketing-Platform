@model EditProfileViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details - Tixora</title>
    <style>
        .details-container {
            padding: 3rem 0;
            max-width: 800px;
            margin: 0 auto;
        }

        .details-card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .user-img-container {
            width: 180px;
            height: 180px;
            overflow: hidden;
            border-radius: 50%;
            margin: 0 auto;
            border: 5px solid #fff;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .user-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-body {
            padding: 2.5rem;
        }

        .card-title {
            font-weight: 700;
            font-size: 1.75rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .user-info-item {
            display: flex;
            border-bottom: 1px solid #eee;
            padding-bottom: 0.75rem;
        }

        .user-info-label {
            font-weight: 600;
            min-width: 120px;
            color: #555;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1.5rem;
        }

        .btn-back {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="container details-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">User Details</h1>
            <a href="/Account/Index" class="btn btn-outline-primary btn-back">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>

        <div class="card details-card">
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="user-img-container mb-4">
                        <img src="/images/user/@Model.ProfileUrl" alt="@Model.Email" class="user-img">
                    </div>
                    <h3 class="card-title">@Model.Email</h3>
                </div>

                <div class="user-info">
                    <div class="user-info-item">
                        <span class="user-info-label">Address:</span>
                        <span>@Model.Address</span>
                    </div>
                    <div class="user-info-item">
                        <span class="user-info-label">City:</span>
                        <span>@Model.City</span>
                    </div>
                    <div class="user-info-item">
                        <span class="user-info-label">Phone:</span>
                        <span>@Model.PhoneNumber</span>
                    </div>
                    <!-- Add any additional user details here -->
                </div>

                <div class="action-buttons">
                    <a href="/Account/Edit?id=@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </a>
                    <a href="/Account/Delete?id=@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete User
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>