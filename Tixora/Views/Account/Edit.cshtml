@model EditProfileViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit";
}
<style>
    .btn-outline {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline:hover {
            background-color: #abaeba;
            border-color: #abaeba;
        }
</style>
<section>
    <div class="container" data-aos="fade-up">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg rounded-4 border-0">
                    <h2 class="card-title mb-4" style="background-color: #0e1b4d; color: white; padding: 10px 15px; border-top-left-radius: 1rem; border-top-right-radius:1rem; font-size: 1.8rem;">
                        Edit User
                    </h2>
                    <div class="card-body p-5">
                       
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <!-- Hidden fields for Id and ProfileUrl -->
                            <input asp-for="Id" type="hidden" />
                            <input asp-for="ProfileUrl" type="hidden" />

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label" style="font-weight:bold"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ProfileUrl" class="form-label" style="font-weight:bold">Profile Picture (Optional)</label>

                                @if (!string.IsNullOrEmpty(Model?.ProfileUrl))
                                {
                                    <div class="mb-3 text-center">
                                        <img src='/images/user/@Model.ProfileUrl' alt="User Image" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                                    </div>
                                }

                                <input type="file" class="form-control" id="ImageUrl" name="ImageUrl" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Address" class="form-label" style="font-weight:bold"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="City" class="form-label" style="font-weight:bold"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="PhoneNumber" class="form-label" style="font-weight:bold"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3" style="background: #0e1b4d; border-color:#0e1b4d">
                                    <i class="bi bi-save"></i> Save Changes
                                </button>
                            </div>

                            <div class="text-center">
                                <a asp-action="Index" class="btn btn-outline btn-back">
                                    <i class="bi bi-arrow-left me-2" style="color:#6c757d"></i>Back to List

                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
