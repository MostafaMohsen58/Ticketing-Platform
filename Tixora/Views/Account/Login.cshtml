@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

    <style>
        body {
            background-image: url('/images/crowded_people.jpg'); 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .login-container {
            max-width: 500px; 
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            margin: auto;
            margin-top: 50px; 
        }

        .form-label {
            font-weight: bold;
        }
    </style>

<div class="container">
    <div class="login-container">
        <h2 class="mb-4 text-center">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe"> @Html.DisplayNameFor(model => model.RememberMe)</label>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            <a asp-action="Register">Don't have an account? Register here</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}