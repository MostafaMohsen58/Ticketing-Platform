@model Tixora.Models.Organizer

@{
    ViewData["Title"] = "Organizer Details";
}

<div class="container">
    <h1>Organizer Details</h1>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>@Model.Name</h4>
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" alt="Logo" style="max-height: 80px; max-width: 100px;" />
                }
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContactEmail)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactEmail)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ContactPhone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContactPhone)</dd>
            </dl>

            @if (Model.Events != null && Model.Events.Any())
            {
                <h4>Organized Events</h4>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model.Events)
                        {
                            <tr>
                                <td>@evt.Title</td>
                                <td>@evt.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@evt.Category</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>