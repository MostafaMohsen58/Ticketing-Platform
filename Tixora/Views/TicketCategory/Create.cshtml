@model Tixora.Models.TicketCategory

@{
    ViewData["Title"] = "Create Category";
}

<div class="container">
    <h1>Create Ticket Category</h1>
    <div class="row">
        <div class="col-md-8">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PriceMultiplier" class="control-label">PriceMultiplier</label>
                            <input asp-for="PriceMultiplier" class="form-control" type="number" step="0.1" min="0.1" max="10.0" value="1.0" />
                            <span asp-validation-for="PriceMultiplier" class="text-danger"></span>
                            <small class="form-text text-muted">Value between 0.1 and 10.0</small>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}