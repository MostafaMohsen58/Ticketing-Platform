@model Tixora.Models.TicketCategory

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Ticket Category</h1>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PriceMultiplier" class="form-label">Price Multiplier</label>
        <input asp-for="PriceMultiplier" class="form-control" type="number" step="0.1" min="0.1" max="10.0" value="1.0" />
        <span asp-validation-for="PriceMultiplier" class="text-danger"></span>
        <small class="form-text text-muted">Value between 0.1 and 10.0</small>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
