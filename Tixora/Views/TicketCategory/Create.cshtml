@model Tixora.Models.TicketCategory

@{
    ViewData["Title"] = "Create Category";
	Layout = "_AdminLayout"; 
}

<section class="py-4">
    <div class="container">
        <div class="card shadow-lg" style="background-color: #ffffff; color: #2f3549; border: 1px solid #2f3138; border-radius: 1.5rem; max-width: 600px; margin: 0 auto;">
            <div class="card-body">
                <h2 class="card-title mb-4" style="background-color: #0e1b4d; color: white; padding: 10px 15px; border-radius: 1rem; font-size: 1.8rem;">
                    Create Ticket Category
                </h2>

                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label" style="font-weight: bold;"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label" style="font-weight: bold;"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PriceMultiplier" class="form-label" style="font-weight: bold;"></label>
                        <input asp-for="PriceMultiplier" class="form-control" type="number" step="0.1" min="0.1" max="10.0" value="1.0" />
                        <span asp-validation-for="PriceMultiplier" class="text-danger"></span>
                        <small class="form-text text-muted">Value between 0.1 and 10.0</small>
                    </div>

                    <div class="mt-4 text-right">
                        <button type="submit" class="btn"
                                style="background-color: #7C4585; color: #ffffff; border-radius: 0.5rem; padding: 10px 25px; font-size: 1rem; transition: all 0.3s ease;">
                            Create
                        </button>
                        <a asp-action="Index" class="btn"
                           style="border: 1px solid #0e1b4d; color: #0e1b4d; border-radius: 0.5rem; padding: 10px 25px; font-size: 1rem; transition: all 0.3s ease;">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn:hover {
        transform: scale(1.05);
        opacity: 0.8;
    }

    .card:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
</style>
