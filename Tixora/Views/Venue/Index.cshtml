    <style>
        .users-section {
            padding: 2rem 0;
        }

        .users-table {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }

            .users-table thead {
                background-color: #f8f9fa;
                text-align: center;
            }

            .users-table th {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.85rem;
                padding: 1rem;
                border-bottom: 2px solid #dee2e6;
            }

            /* Ensure text inside cells wraps properly */
            .users-table td {
                word-wrap: break-word; /* Breaks long words */
                word-break: break-all; /* Allows content to break anywhere if needed */
                overflow-wrap: break-word; /* Ensures that long words will break when necessary */
                max-width: 265px; /* Adjust as needed */
                text-overflow: ellipsis; /* Truncate content with '...' if it overflows */
                white-space: nowrap; /* Prevents text from breaking into multiple lines */
                overflow: hidden; /* Hide content that overflows */
                padding: 1rem;
                vertical-align: middle;
            }

            /* For long text fields (like name, email, etc.), you may want to force wrapping */
            .users-table td {
                word-wrap: break-word;
                /* max-width: 30px; /* Adjust as needed */
            }

            .users-table tbody tr {
                transition: background-color 0.2s ease;
                text-align: center;
                max-width: 265px;
            }

                .users-table tbody tr:hover {
                    background-color: rgba(0, 123, 255, 0.05);
                }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }

        .btn-action {
            min-width: 80px;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .search-container {
            max-width: 300px;
        }

        /* Custom modal styling */
        .modal-header {
            background-color: #0e1b4d;
            color: white;
            padding: 8px 20px;
        }

        .modal-title {
            font-size: 16px;
        }

        .modal-body {
            background-color: #ffffff;
            color: #0e1b4d;
            font-weight: bold;
            font-size: 16px;
            padding: 20px;
        }

        .modal-footer {
            background-color: #ffffff;
            padding: 8px 10px;
        }

        .btn-confirm-delete {
            background-color: #f82249;
            color: white;
            border: 2px solid #f82249;
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 16px;
        }

        .btn-cancel-delete {
            background-color: #ffffff;
            color: #f82249;
            border: 2px solid #f82249;
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container users-section">
        <div class="header-actions">
            <h1>Venues Management</h1>
            <a asp-action="Create" class="btn d-flex align-items-center" style="background-color:#7C4585; color:white">
                    <i class="bi bi-plus-circle me-2"></i>Add New Venue
                </a>
        </div>

        @if (Model != null && !Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No venues found.
            </div>
        }
        else
        {
            <div class="table-responsive users-table" style="margin: 5rem; margin-top: 0px; margin-bottom:0px">
                <table class="table table-borderless mb-3">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Capacity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capacity)
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/Venue/Edit?id=@item.Id" class="btn btn-action" style="background-color:#7C4585; color:white">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a href="/Venue/Details?id=@item.Id" class="btn btn-warning btn-action" style="background-color:#F7AD45;">
                                            <i class="bi bi-eye me-1"></i>Details
                                        </a>
                                        <button type="button"
                                                class="btn btn-danger btn-action"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@item.Id"
                                                data-name="@item.Name"
                                                data-address="@item.Address"
                                                data-capacity="@item.Capacity"
                                                style="background-color:#BB3E00;color:white">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    
    </div>
   
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="max-width: 500px;">
            <div class="modal-content" style="background-color: #ffffff;">
                <div class="modal-header" style="background-color: #0e1b4d; color: white; padding: 8px 20px;">
                    <h5 class="modal-title" id="deleteModalLabel" style="font-size: 16px;">Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="background-color: #ffffff; color: #0e1b4d; font-weight: bold; font-size: 16px; padding: 20px;">
                    Are you sure you want to delete this venue?
                    <div class="modal-body">
                        <p><strong>Name:</strong> <span id="venueNameToDelete"></span></p>
                        <p><strong>Address:</strong> <span id="venueAddressToDelete"></span></p>
                        <p><strong>Capacity:</strong> <span id="venueCapacityToDelete"></span></p>
                        <p><strong>Type:</strong> <span id="venueTypeToDelete"></span></p>
                        <p>Are you sure you want to delete this venue?</p>
                    </div>
                </div>
                <div class="modal-footer" style="background-color: #ffffff; padding: 8px 10px;">
                    <form id="deleteVenueForm" action="/Venue/ConfirmDelete" method="post">
                        <input type="hidden" name="id" id="venueIdToDelete" />
                      
                        <button type="submit" class="btn" style="background-color:#f82249; color: white; border: 2px solid #f82249; border-radius: 5px; padding: 8px 16px; font-size: 16px;">Yes</button>
                      
                        <button type="button" class="btn" style="background-color: #ffffff; color: #f82249; border: 2px solid #f82249; border-radius: 5px; padding: 8px 16px; font-size: 16px;" data-bs-dismiss="modal">No</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // JavaScript for handling the delete confirmation modal
        $(document).ready(function() {
            // When the delete button is clicked, set the venue data in the modal
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                
                var venueId = button.data('id');
                var venueName = button.data('name');
                var venueAddress = button.data('address');
                var venueCapacity = button.data('capacity');

                // Update the modal's content
                var modal = $(this);
                modal.find('#venueIdToDelete').val(venueId);
                modal.find('#venueNameToDelete').text(venueName);
                modal.find('#venueAddressToDelete').text(venueAddress);
                modal.find('#venueCapacityToDelete').text(venueCapacity);
            });
        });
    </script>
</body>
