@model IEnumerable<Booking>
@{
    ViewData["Title"] = "My Tickets";
}

<link href="~/css/mytickets.css" rel="stylesheet" />

<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold text-primary">🎫 My Tickets</h2>

    <div class="accordion" id="ticketsAccordion">
        <!-- Entertainment Tickets -->
        <div class="accordion-item mb-3 border-0 shadow-sm">
            <h2 class="accordion-header" id="headingEntertainment">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseEntertainment" aria-expanded="false" aria-controls="collapseEntertainment">
                    🎭 Entertainment Tickets
                </button>
            </h2>
            <div id="collapseEntertainment" class="accordion-collapse collapse" aria-labelledby="headingEntertainment">
                <div class="accordion-body">
                    @if (!Model.Any(b => b.Ticket.Event.Category == "Entertainment"))
                    {
                        <div class="alert alert-info text-center">
                            You have no entertainment tickets yet.
                        </div>
                    }
                    else
                    {
                        <div class="row g-4">
                            @foreach (var ticket in Model.Where(b => b.Ticket.Event.Category == "Entertainment"))
                            {
                                <div class="col-12">
                                    <div class="card ticket-card border-0">
                                        <div class="ticket-header">
                                            <div class="ticket-info">
                                                <div class="info-item">
                                                    <p class="label">Name:</p>
                                                    <p class="value">@ticket.User.FirstName</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Ticket No.:</p>
                                                    <p class="value">@ticket.Id</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Tazkarti ID:</p>
                                                    <p class="value">@ticket.UserId</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Status:</p>
                                                    <p class="value"><span class="badge bg-success">Delivered</span></p>
                                                </div>
                                            </div>
                                            <button class="btn btn-outline-secondary btn-sm cancel-btn">Cancel</button>
                                        </div>
                                        <div class="ticket-body">
                                            <div class="event-logos">
                                                <span class="icon-placeholder">🎤</span>
                                                <span class="vs-text">vs</span>
                                                <span class="icon-placeholder">🎸</span>
                                            </div>
                                            <div class="event-details">
                                                <span class="event-title">@ticket.Ticket.Event.Title</span>
                                                <span class="event-venue"><span class="icon">🏟️</span>@ticket.Ticket.Event.Venue.Name</span>
                                                <span class="event-date"><span class="icon">📅</span>@ticket.BookedAt.ToString("ddd dd MMM yyyy") | <strong>Time:</strong> @ticket.BookedAt.ToString("hh:mm tt")</span>
                                                <span class="event-category"><span class="icon">🎟️</span>@ticket.Ticket.TicketCategory.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sports Tickets -->
        <div class="accordion-item mb-3 border-0 shadow-sm">
            <h2 class="accordion-header" id="headingSports">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseSports" aria-expanded="false" aria-controls="collapseSports">
                    ⚽ Sports Tickets
                </button>
            </h2>
            <div id="collapseSports" class="accordion-collapse collapse" aria-labelledby="headingSports">
                <div class="accordion-body">
                    @if (!Model.Any(b => b.Ticket.Event.Category == "Matches"))
                    {
                        <div class="alert alert-info text-center">
                            You have no sports tickets yet.
                        </div>
                    }
                    else
                    {
                        <div class="row g-4">
                            @foreach (var ticket in Model.Where(b => b.Ticket.Event.Category == "Matches"))
                            {
                                <div class="col-12">
                                    <div class="card ticket-card border-0">
                                        <div class="ticket-header">
                                            <div class="ticket-info">
                                                <div class="info-item">
                                                    <p class="label">Name:</p>
                                                    <p class="value">@ticket.User.FirstName</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Ticket No.:</p>
                                                    <p class="value">@ticket.Id</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Tazkarti ID:</p>
                                                    <p class="value">@ticket.UserId</p>
                                                </div>
                                                <div class="info-item">
                                                    <p class="label">Status:</p>
                                                    <p class="value"><span class="badge bg-success">Delivered</span></p>
                                                </div>
                                            </div>
                                            @* <button class="btn btn-outline-secondary btn-sm cancel-btn">Cancel</button> *@
                                        </div>
                                        <div class="ticket-body">
                                            <div class="event-logos">
                                                <span class="icon-placeholder">⚽</span>
                                                <span class="vs-text">vs</span>
                                                <span class="icon-placeholder">⚽</span>
                                            </div>
                                            <div class="event-details">
                                                <span class="event-title">@ticket.Ticket.Event.Title</span>
                                                <span class="event-venue"><span class="icon">🏟️</span>@ticket.Ticket.Event.Venue.Name</span>
                                                <span class="event-date"><span class="icon">📅</span>@ticket.BookedAt.ToString("ddd dd MMM yyyy") | <strong>Time:</strong> @ticket.BookedAt.ToString("hh:mm tt")</span>
                                                <span class="event-category"><span class="icon">🎟️</span>@ticket.Ticket.TicketCategory.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Payment History -->
        <div class="accordion-item mb-3 border-0 shadow-sm">
            <h2 class="accordion-header" id="headingPayments">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsePayments" aria-expanded="false" aria-controls="collapsePayments">
                    💳 Payment History
                </button>
            </h2>
            <div id="collapsePayments" class="accordion-collapse collapse" aria-labelledby="headingPayments">
                <div class="accordion-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            You have no payment history.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Booking No.</th>
                                        <th>Booked At</th>
                                        <th>Payment Method</th>
                                        <th>Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model)
                                    {
                                        <tr>
                                            <td>#@ticket.Id</td>
                                            <td>@ticket.BookedAt.ToString("dd MMM yyyy")</td>
                                            <td>Stripe</td>
                                            <td>@(ticket.TotalAmount * ticket.Ticket.Price) EGP</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add smooth scroll to accordion items when opened
    document.querySelectorAll('.accordion-button').forEach(button => {
        button.addEventListener('click', () => {
            setTimeout(() => {
                button.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 300);
        });
    });
</script>