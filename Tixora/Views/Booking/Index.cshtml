@model IEnumerable<Tixora.Models.Booking>

@{
    ViewData["Title"] = "Booking List";
    Layout = "_AdminLayout";
}

<style>
    .users-section {
        padding: 2rem 0;
    }

    .users-table {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        border-radius: 10px;
        overflow: hidden;
    }

        .users-table thead {
            background-color: #f8f9fa;
            text-align: center;
        }

        .users-table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            padding: 1rem;
            border-bottom: 2px solid #dee2e6;
        }

        .users-table td {
            word-wrap: break-word;
            word-break: break-all;
            overflow-wrap: break-word;
            max-width: 265px;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            padding: 1rem;
            vertical-align: middle;
        }

        .users-table tbody tr {
            transition: background-color 0.2s ease;
            text-align: center;
            max-width: 265px;
        }

            .users-table tbody tr:hover {
                background-color: rgba(0, 123, 255, 0.05);
            }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-action {
        min-width: 80px;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
</style>

<div class="container users-section">
    <div class="header-actions">
        <h1>Booking List</h1>
    </div>

    @if (Model != null && !Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            No bookings found.
        </div>
    }
    else
    {
        <div class="table-responsive users-table">
            <table class="table table-borderless mb-3">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Ticket Type</th>
                        <th>Quantity</th>
                        <th>Booking Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td><strong>@book.User?.UserName</strong></td>
                            <td>@book.Ticket?.TicketCategory.Name</td>
                            <td>@book.Amount</td>
                            <td>@book.BookedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-action" style="background-color:#7C4585; color:white">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-warning btn-action" style="background-color:#F7AD45;">
                                        <i class="bi bi-eye me-1"></i>Details
                                    </a>
                                    <button type="button"
                                            class="btn btn-danger btn-action"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-id="@book.Id"
                                            data-username="@book.User?.UserName"
                                            data-ticket="@book.Ticket?.TicketCategory.Name"
                                            style="background-color:#BB3E00;color:white">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 500px;">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #0e1b4d; color: white;">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="background-color: #ffffff; color: #0e1b4d; font-weight: bold;">
                <p><strong>Username:</strong> <span id="bookingUserToDelete"></span></p>
                <p><strong>Ticket Type:</strong> <span id="bookingTicketToDelete"></span></p>
                <p>Are you sure you want to delete this booking?</p>
            </div>
            <div class="modal-footer" style="background-color: #ffffff;">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="bookingId" name="id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn" style="background-color:#BB3E00; color: white;">Yes</button>
                    <button type="button" class="btn" style="background-color: #ffffff; color: #BB3E00; border: 2px solid #BB3E00;" data-bs-dismiss="modal">No</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successPopup" class="modal fade" tabindex="-1" aria-labelledby="successPopupLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: #0e1b4d;">
                <div class="modal-header" style="background-color: #0e1b4d; color: white;">
                    <h5 class="modal-title" id="successPopupLabel">Success</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="background-color: #ffffff; color: #0e1b4d; font-weight: bold;">
                    @TempData["SuccessMessage"]
                </div>
                <div class="modal-footer" style="background-color: #ffffff;">
                    <button type="button" class="btn" style="background-color: #f82249; color: white;" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var bookingId = button.data('id');
            var bookingUser = button.data('username');
            var bookingTicket = button.data('ticket');

            var modal = $(this);
            modal.find('#bookingId').val(bookingId);
            modal.find('#bookingUserToDelete').text(bookingUser);
            modal.find('#bookingTicketToDelete').text(bookingTicket);
        });

    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                    $('#successPopup').modal('show');
        </text>
    }
    });
</script>
