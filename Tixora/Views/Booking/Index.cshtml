@model IEnumerable<Tixora.Models.Booking>

@{
    ViewData["Title"] = "Booking List";
    Layout = "_AdminLayout";
}

<style>
    .users-section {
        padding: 2rem 0;
    }

    .users-table {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        border-radius: 10px;
        overflow: hidden;
    }

        .users-table thead {
            background-color: #f8f9fa;
            text-align: center;
        }

<div class="container">
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Ticket Type</th>
                    <th>Quantity Quantity</th>
                    <th>Bokking Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.User?.UserName</td>
                        <td>@book.Ticket?.TicketCategory.Name</td>
                        <td>@book.TicketQuantity</td>
                        <td>@book.BookedAt.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-details">
                                <i class="fas fa-eye"></i> Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-edit">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-delete btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete 
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

