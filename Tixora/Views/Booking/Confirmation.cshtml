@model Tixora.ViewModels.BookingViewModel.ConfirmationViewModel

@{
    ViewData["Title"] = "Confirmation";
}

<div class="container confirmation-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2><i class="fas fa-check-circle"></i> Booking Confirmed</h2>
                </div>

                <div class="card-body">
                    <div class="alert alert-success">
                        <h4 class="alert-heading">Thank you for your booking!</h4>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4>Event Details</h4>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Event:</strong> @Model.EventTitle
                                </li>
                                <li class="list-group-item">
                                    <strong>Date:</strong> @Model.EventDate.ToString("f")
                                </li>
                                <li class="list-group-item">
                                    <strong>Venue:</strong> @Model.VenueName
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <h4>Booking Details</h4>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Ticket Type:</strong> @Model.TicketType
                                </li>
                                <li class="list-group-item">
                                    <strong>Quantity:</strong> @Model.Quantity
                                </li>
                                @* <li class="list-group-item"> *@
                                @*     <strong>Total Price:</strong> @Model.TotalPrice.ToString("C") *@
                                @* </li> *@
                                <li class="list-group-item">
                                    <strong>Booked On:</strong> @Model.BookingDate.ToString("g")
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="PrintTicket" asp-controller="Booking" asp-route-id="@Model.BookingId" class="btn btn-primary mr-2">
                            <i class="fas fa-print"></i> Print Ticket
                        </a>
                        <a asp-action="Index" asp-controller="Event" class="btn btn-outline-secondary">
                            <i class="fas fa-calendar-alt"></i> View Other Events
                        </a>
                    </div>
                </div>

                @* <div class="card-footer text-muted text-center"> *@
                @*     <small>A confirmation email has been sent to your registered email address.</small> *@
                @* </div> *@
            </div>
        </div>
    </div>
</div>