@model Tixora.ViewModels.CreateBookingViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Book Tickets for @Model.EventTitle</h3>
            <p class="mb-0">@Model.VenueName • @Model.EventDate.ToString("f")</p>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="EventId" />

                <div class="form-group mb-3">
                    <label asp-for="TicketId" class="form-label">Ticket Type</label>
                    <select asp-for="TicketId" asp-items="Model.AvailableTickets"
                            class="form-select" required>
                        <option value="">-- Select Ticket --</option>
                    </select>
                    <span asp-validation-for="TicketId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label">Number of Tickets</label>
                    <input asp-for="Amount" class="form-control" min="1" max="10" required>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-ticket-alt"></i> Confirm Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>