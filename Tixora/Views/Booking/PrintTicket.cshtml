@model Tixora.ViewModels.BookingViewModel.ConfirmationViewModel
@{
    Layout = null;
    ViewData["Title"] = "PrintTicket";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ticket for @Model.EventTitle</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 0;
            background: white !important;
            display: flex;
			flex-direction: column;
			justify-content: center;
			height: 100vh;
        }

        .print-container {
            border: 2px dashed #ccc;
			margin: 0 auto;
            max-width: 800px;
            padding: 20px;
        }

        .ticket-header {
            text-align: center;
            margin-bottom: 20px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            .print-container {
                border: none;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <div class="print-container">
            <div class="ticket-header">
                <img src="/images/Logo_ui.png" alt="Company Logo" class="d-inline-block me-2" style="height: 60px;">
                <h2 class="text-primary d-inline-block">E-Ticket</h2>
            </div>

            <div class="ticket-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2">Event Information</h5>
                        <p><strong>Event Title: </strong>@Model.EventTitle</p>
                        <p><strong>Event Date: </strong>@Model.EventDate.ToString("F")</p>
                        <p><strong>Venue Name: </strong>@Model.VenueName</p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2">Ticket Information</h5>
                        <p><strong>Type:</strong> @Model.TicketType</p>
                        <p><strong>Quantity:</strong> @Model.Quantity</p>
                        <p><strong>Booked At:</strong> @Model.BookingDate.ToString("F")</p>
                    </div>
                </div>
                <div class="terms-and-conditions mt-4 pt-3 border-top">
                    <h6 class="text-center">Terms & Conditions</h6>
                    <ul class="small pl-3">
                        <li>This ticket is non-transferable and non-refundable</li>
                        <li>Please arrive at least 30 minutes before the event starts</li>
                        <li>Present this ticket (printed or digital) at the entrance</li>
                        <li>Valid ID may be required for entry</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="text-center mt-4 no-print">
            <button class="btn btn-primary" onclick="window.print()">
                <i class="fas fa-print"></i> Print Ticket
            </button>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
        </div>
    </div>
</body>
</html>

