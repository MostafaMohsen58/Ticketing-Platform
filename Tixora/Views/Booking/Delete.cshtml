@model Tixora.Models.Booking

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";

}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0 text-white">Confirm Booking Deletion</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this booking?</h4>
            <hr />
            
            <div class="row">
                <div class="col-md-6">
                    <h5>Booking Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Booking ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">User:</dt>
                        <dd class="col-sm-8">@Model.User?.UserName</dd>
                        
                        <dt class="col-sm-4">Ticket Type:</dt>
                        <dd class="col-sm-8">@Model.Ticket.TicketCategory.Name</dd>
                        
                        <dt class="col-sm-4">Quantity:</dt>
                        <dd class="col-sm-8">@Model.TicketQuantity</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Transaction Details</h5>
                    <dl class="row">
                        
                        <dt class="col-sm-4">Booking Date:</dt>
                        <dd class="col-sm-8">@Model.BookedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                        
                    </dl>
                </div>
            </div>

            <div class="alert alert-warning mt-4">
                <i class="fas fa-exclamation-triangle"></i> <strong>Warning:</strong> This action cannot be undone.
            </div>
            
            <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container {
            max-width: 900px;
        }
        .btn {
            margin-bottom: 5px;
        }
        dt {
            font-weight: 500;
        }
        .card {
            border-radius: 10px;
        }
        h5 {
            font-weight: bold;
        }
    </style>
}